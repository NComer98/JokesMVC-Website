@model IEnumerable<JokesWebAppMVC.Models.Joke>

@{
    ViewData["Title"] = "Index";
}

<h1>Index implementation using ASP instead of ReactJS for front-end</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.jokeSetUp) *@
                Joke Set-up
            </th>
            <th>
                Joke Creator
            </th>
            <th>(Click details to see punchline)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.jokeSetUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jokeUsername)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
